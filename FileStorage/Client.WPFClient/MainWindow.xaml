<Window x:Class="Client.WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Client.WPFClient"
        Title="MainWindow" Height="350" Width="525">

    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Button Content="Start Download" HorizontalAlignment="Left" Margin="433,135,0,0" VerticalAlignment="Top" Width="75"
                Command="{Binding StartDownload}"/>
        <ProgressBar HorizontalAlignment="Left" Height="19" Margin="10,135,0,0" VerticalAlignment="Top" Width="418"
                     Maximum="{Binding ProgressMaxVal}"
                     Value="{Binding ProgressVal}"/>

    </Grid>
</Window>
