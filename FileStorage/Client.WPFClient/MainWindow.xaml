<Window x:Class="Client.WCFServiceWPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Client.WCFServiceWPFClient"
        Title="MainWindow" Height="350" Width="525">

    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Button Content="Start Download" HorizontalAlignment="Left" Margin="419,60,0,0" VerticalAlignment="Top" Width="89"
                Command="{Binding StartDownload}"/>
        <ProgressBar HorizontalAlignment="Left" Height="19" Margin="10,60,0,0" VerticalAlignment="Top" Width="404"
                     Maximum="{Binding DownloadProgressMaxVal}"
                     Value="{Binding DownloadProgressVal}"/>
      
        <Button Content="Start Upload" HorizontalAlignment="Left" Margin="419,84,0,0" VerticalAlignment="Top" Width="89"
        	Command="{Binding StartUpload}"/>
        <ProgressBar HorizontalAlignment="Left" Height="19" Margin="10,84,0,0" VerticalAlignment="Top" Width="404"
        	Maximum="{Binding UploadProgressMaxVal}"
        	Value="{Binding UploadProgressVal}"/>

    </Grid>
</Window>
